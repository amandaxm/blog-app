{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{/each}}
<div class="card mb-5">
    <div class="card-body">
        <h4>Editar postagem: </h4>
        <form action="/admin/postagem/edit" method="POST">
            <input type="hidden" value="{{postagem._id}}" name="id">
            <label for="titulo">Título</label>
            <input type="text" name="titulo" class="form-control" id="titulo" required value="{{postagem.titulo}}">

            <label for="slug" class="mt-3">Slug</label>
            <input type="text" name="slug" class="form-control" id="slug" required value="{{postagem.slug}}">

            <label for="descricao" class="mt-3">Descrição</label>
            <input type="text" name="descricao" class="form-control" id="descricao" required value="{{postagem.descricao}}">

            <label for="conteudo" class="mt-3">Conteúdo</label>
            <textarea name="conteudo" id="conteudo" class="form-control" required>{{postagem.conteudo}}</textarea>

            <label for="categoria" class="mt-3">Categoria: </label>
            <select name="categoria" id="categoria" class="custom-select">
                {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                    <option value="0">Nenhuma categoria registrada</option>
                {{/each}}
            </select>
            <button type="submit" class="btn btn-success mt-3 d-block">Editar postagem</button>
        </form>
    </div>
</div>