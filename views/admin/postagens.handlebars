<h2>Lista de postagens:</h2>
<hr>
<a href="/admin/postagens/add" class="btn btn-success mb-3">Nova postagem</a>

{{#each postagens}}
    <div class="card mb-3">
        <div class="card-body">
            <h4>{{titulo}}</h4>
            <p>Descrição: {{descricao}}</p>
            <small>Data: {{data}}</small>
            <small class="d-block">Categoria: {{categoria.nome}}</small>
            <a href="/admin/postagens/edit/{{_id}}"><button class="btn btn-success mt-3">Editar postagem</button></a>
           
            <form action="/admin/postagens/deletar/{{_id}}" method="post"> <input type="hidden" name="id" value="{{_id}}">
            <input type="hidden" name="id" value="{{_id}}">

            <button type="submit" class="btn btn-danger mt-3"> Deletar Postagem</button>

        </form>

         </div>
    </div>
{{else}}
    <p>Nenhuma postagem registrada</p>
{{/each}}