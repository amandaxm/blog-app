<h2>Lista de categorias</h2>
<hr>
<a href="/admin/categorias/add"><button class="btn btn-success">Nova Categoria</button></a>

{{#each categorias}}
    <div class="card mt-4 mb-4">
        <div class="card-body">
            <h4>{{nome}}</h4>
            <small class="d-block">Slug: {{slug}}</small>
            <br>
            <small class="d-block">Data criação: {{date}}</small>
           <a href="/admin/categorias/edit/{{_id}}"> <button class="btn btn-success mt-4 mb-4">Editar Categoria</button></a>
        </div>
    </div>
    {{else}}
    <h4 class="mt-3">Nenhuma categoria registrada</h4>
{{/each}}